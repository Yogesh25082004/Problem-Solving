#include <stdio.h>

int main() {

    //In this we are going to find the given three inputs form a triangle.
    int x,y,z;

    printf("Enter the first side: "); scanf("\n %d",&x);
    printf("Enter the second side: "); scanf("\n %d",&y);
    printf("Enter the third side: "); scanf("\n %d",&z);

    if (x+y>z && y+z>x && z+x>y)
    {
        printf("They are the sides of a triangle");
    }
    else
    {
        printf("They do not make a triangle");
    }

    return 0;
}
